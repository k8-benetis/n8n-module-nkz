# =============================================================================
# n8n Integration Hub - Environment Configuration
# =============================================================================
# Copy this file to .env.local for local development
# =============================================================================

# =============================================================================
# Frontend Configuration
# =============================================================================

# Vite dev server port
VITE_PORT=5003

# API base URL (for local development, proxy to production)
VITE_API_URL=https://nkz.artotxiki.com

# =============================================================================
# Backend Configuration
# =============================================================================

# Application
APP_NAME=n8n Integration Hub
APP_VERSION=1.0.0
DEBUG=true
API_PREFIX=/api/n8n-nkz

# CORS (for local development)
CORS_ORIGINS=["http://localhost:5003","http://localhost:5173"]

# =============================================================================
# Keycloak / Authentication
# =============================================================================

KEYCLOAK_URL=https://auth.artotxiki.com/auth
KEYCLOAK_REALM=nekazari
JWT_AUDIENCE=account

# Service-to-service authentication key (optional)
# MODULE_MANAGEMENT_KEY=your-secret-key

# =============================================================================
# Integration Services
# =============================================================================

# n8n
N8N_URL=https://n8n.nekazari.artotxiki.com
# N8N_API_KEY=your-n8n-api-key

# Intelligence Module
INTELLIGENCE_URL=https://nkz.artotxiki.com
INTELLIGENCE_API_PREFIX=/api/intelligence

# NDVI Worker
NDVI_WORKER_URL=http://ndvi-worker-service:8000

# Email Service
EMAIL_SERVICE_URL=http://email-service:8000

# Odoo ERP (if using)
# ODOO_URL=https://odoo.example.com
# ODOO_DB=nekazari
# ODOO_USERNAME=admin
# ODOO_PASSWORD=admin-password

# ROS2 Bridge
ROS2_BRIDGE_URL=http://ros2-fiware-bridge-service:8000

# Orion-LD
ORION_URL=https://nkz.artotxiki.com
CONTEXT_URL=https://nekazari.artotxiki.com/ngsi-ld-context.json

# =============================================================================
# Redis (for caching)
# =============================================================================

REDIS_HOST=redis-service
REDIS_PORT=6379
# REDIS_PASSWORD=redis-password

# =============================================================================
# Database (for webhook configs - optional)
# =============================================================================

# DATABASE_URL=postgresql://user:password@localhost:5432/n8n_nkz
