{
  "id": "n8n-nkz",
  "name": "n8n-nkz",
  "display_name": "n8n Integration Hub",
  "version": "1.0.0",
  "description": "Workflow Orchestration Hub - Integrates n8n with Nekazari platform services including Sentinel/NDVI analysis, AI predictions, notifications, Odoo ERP, and ROS2 robotics",
  "short_description": "n8n workflow automation and service integration",
  "author": {
    "name": "Nekazari Team",
    "email": "nekazari@artotxiki.com",
    "organization": "Artotxiki"
  },
  "category": "integration",
  "module_type": "ADDON_CORE",
  "required_plan_type": "premium",
  "pricing_tier": "INCLUDED",
  "route_path": "/n8n-hub",
  "label": "n8n Integration Hub",
  "icon": "workflow",
  "icon_url": "assets/icon.png",
  "required_roles": ["TenantAdmin", "PlatformAdmin"],
  "dependencies": {
    "sdk_version": "^1.0.0",
    "react_version": "^18.3.1",
    "platform_version": "^2.0.0"
  },
  "permissions": {
    "api_access": [
      "/api/n8n-nkz/*"
    ],
    "storage_access": false,
    "external_requests": [
      "n8n.nekazari.artotxiki.com",
      "intelligence-api-service.nekazari.svc.cluster.local",
      "odoo.artotxiki.com",
      "ros2-bridge-service.nekazari.svc.cluster.local"
    ]
  },
  "build_config": {
    "type": "remote",
    "remote_entry_url": "/modules/n8n-nkz/assets/remoteEntry.js",
    "scope": "n8n_nkz",
    "exposed_module": "./App"
  },
  "integrations": {
    "n8n": {
      "description": "Core workflow automation engine",
      "endpoints": ["workflows", "executions", "webhooks"]
    },
    "sentinel": {
      "description": "Satellite imagery and NDVI index analysis",
      "endpoints": ["ndvi", "ndwi", "evi", "analysis"]
    },
    "intelligence": {
      "description": "AI/ML predictions and analysis",
      "endpoints": ["predict", "analyze", "jobs"]
    },
    "notifications": {
      "description": "Multi-channel alert system",
      "endpoints": ["email", "push", "sms", "telegram"]
    },
    "odoo": {
      "description": "ERP integration for farm management",
      "endpoints": ["parcels", "harvests", "inventory", "contacts"]
    },
    "ros2": {
      "description": "Agricultural robotics integration",
      "endpoints": ["robots", "commands", "telemetry", "missions"]
    }
  },
  "metadata": {
    "icon": "ðŸ”„",
    "color": "#FF6D00",
    "features": [
      "Workflow Management Dashboard",
      "Sentinel/NDVI Index Analysis Triggers",
      "Production & Pest Prediction Pipelines",
      "Multi-channel Notification Orchestration",
      "Odoo ERP Synchronization",
      "ROS2 Robot Command & Telemetry",
      "Webhook Management",
      "Execution Monitoring"
    ],
    "screenshots": [
      "assets/screenshot-workflows.png",
      "assets/screenshot-integrations.png"
    ],
    "slots": {
      "layer-toggle": [],
      "context-panel": ["WorkflowStatusPanel"],
      "bottom-panel": ["ExecutionMonitor"],
      "entity-tree": []
    }
  }
}
